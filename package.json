{
	"name": "pandora-tooling-template",
	"version": "0.1.0",
	"private": true,
	"repository": "git@github.com:Project-Pandora-Game/tooling-template.git",
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist out",
		"build": "tsc -p ./tsconfig.src.json",
		"build:swc": "swc src -d dist",
		"predev": "rimraf dist out",
		"dev": "tsc-watch -p ./tsconfig.src.json --onSuccess \"node --enable-source-maps ./dist/index --watch\"",
		"start": "node --enable-source-maps ./dist/index",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "tsc -p . --noEmit",
		"type-check:test": "tsc -p ./tsconfig.test.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.src.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"postinstall": "node scripts/postinstall.cjs"
	},
	"dependencies": {
		"lodash": "^4.17.21",
		"pandora-common": "github:Project-Pandora-Game/pandora-common#3062cbc",
		"rimraf": "^3.0.2"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.177",
		"@swc/jest": "^0.2.20",
		"@types/jest": "^27.4.0",
		"@types/rimraf": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"eslint": "^8.14.0",
		"jest": "^28.0.3",
		"rimraf": "^3.0.2",
		"ts-mockito": "^2.6.1",
		"tsc-watch": "^5.0.3",
		"tslib": "^2.4.0",
		"typescript": "^4.6.4"
	}
}
