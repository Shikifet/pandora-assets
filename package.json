{
	"name": "pandora-assets",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.26.1+sha512.664074abc367d2c9324fdc18037097ce0a8f126034160f709928e9e9f95d98714347044e5c3164d65bd5da6c59c6be362b107546292a8eecb7999196e5ce58fa",
	"engines": {
		"node": ">=22.x"
	},
	"repository": "git@github.com:Project-Pandora-Game/tooling-template.git",
	"license": "MIT",
	"pnpm": {
		"onlyBuiltDependencies": [
			"pandora-common",
			"sharp",
			"unrs-resolver"
		]
	},
	"type": "module",
	"scripts": {
		"postinstall": "node .hooks/postinstall.cjs",
		"ci": "pnpm run build --prod && pnpm run lint && pnpm run type-check:test && pnpm run test --ci",
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.json && node --enable-source-maps --env-file=.env ./dist/index",
		"dev": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --onSuccess \"node --enable-source-maps --env-file=.env ./dist/index --watch\"",
		"dev:inspect": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --onSuccess \"node --inspect=26958 --enable-source-maps --env-file=.env ./dist/index --watch\"",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"normalize": "node --enable-source-maps ./dist/tools/normalize"
	},
	"dependencies": {
		"delaunator": "5.0.1",
		"express": "5.2.1",
		"ignore": "7.0.5",
		"immer": "11.0.1",
		"json-diff": "1.0.6",
		"lodash-es": "4.17.22",
		"pandora-common": "github:Project-Pandora-Game/pandora#master&path:pandora-common",
		"rimraf": "6.1.2",
		"sharp": "0.34.5",
		"simple-git": "3.30.0",
		"zod": "4.2.1"
	},
	"devDependencies": {
		"@eslint/js": "9.39.2",
		"@jest/globals": "30.2.0",
		"@stylistic/eslint-plugin": "5.6.1",
		"@types/delaunator": "5.0.3",
		"@types/express": "5.0.6",
		"@types/json-diff": "1.0.3",
		"@types/lodash-es": "4.17.12",
		"@types/node": "22.19.3",
		"eslint": "9.39.2",
		"eslint-plugin-import": "2.32.0",
		"jest": "30.2.0",
		"ts-jest": "29.4.6",
		"tsc-watch": "7.2.0",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "8.50.0"
	}
}
