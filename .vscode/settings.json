{
	"debug.onTaskErrors": "showErrors",
	"npm.packageManager": "pnpm",
	"task.allowAutomaticTasks": "on",
	"task.autoDetect": "off",
	"debug.confirmOnExit": "never",
	"debug.toolBarLocation": "floating",
	"debug.showInStatusBar": "never",
	"debug.openDebug": "neverOpen",
	"editor.insertSpaces": false,
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"files.eol": "\n",
	"files.encoding": "utf8",
	"files.readonlyInclude": {
		"node_modules/**": true,
		"coverage/**": true,
		"dist/**": true,
		"out/**": true,
		"out-for-test/**": true
	},
	"git.rebaseWhenSync": true,
	"git.branchProtection": [
		"master"
	],
	"git.branchProtectionPrompt": "alwaysCommitToNewBranch",
	"git.branchPrefix": "add/",
	"git.branchRandomName.enable": true,
	"git.pullBeforeCheckout": true,
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnSave": true
	},
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.preferences.importModuleSpecifierEnding": "js",
	"typescript.format.enable": true,
	"typescript.format.semicolons": "insert",
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
	"typescript.preferences.preferTypeOnlyAutoImports": true,
	"typescript.preferences.quoteStyle": "single",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "explicit",
	},
	"eslint.useESLintClass": true,
	"eslint.useFlatConfig": true,
	"eslint.problems.shortenToSingleLine": true,
	"eslint.rules.customizations": [
		{
			"rule": "*",
			"severity": "warn"
		},
		{
			"rule": "*",
			"fixable": true,
			"severity": "info"
		}
	],
	"json.schemas": [
		{
			"fileMatch": [
				"/src/assets/**/graphics.json"
			],
			"url": "./out/graphicsSource-worn.schema.json"
		},
		{
			"fileMatch": [
				"/src/assets/**/roomDeviceGraphics.json"
			],
			"url": "./out/graphicsSource-roomDevice.schema.json"
		},
		{
			"fileMatch": [
				"/src/templates/**/*.json"
			],
			"url": "./out/graphicsSource-pointTemplate.schema.json"
		}
	],
}
